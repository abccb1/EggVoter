<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f68d00"
    tools:context=".VoteActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/luvfood_background"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/please_vote"
            android:textSize="20sp"
            android:background="#1a1a1a" />

        <ListView
            android:id="@+id/vote_list"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />


    

    <LinearLayout
            style="?buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

		<ImageButton
		    android:id="@+id/vote_button"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_gravity="bottom"
		    android:layout_weight="1"
		    android:background="@null"
		    android:contentDescription="@string/action_submit"
		    android:src="@drawable/vote" />

     </LinearLayout>
     </LinearLayout>
</merge>